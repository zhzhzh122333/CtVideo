<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ctg.ctvideo.activities.HomepageActivity"
    tools:showIn="@layout/activity_homepage">
    
    <android.support.v4.view.ViewPager
        android:id="@+id/homepage_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/homepage_tab_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/homepage_tab_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|bottom"
            android:checked="true"
            android:text="推荐"/>
        <RadioButton
            android:id="@+id/homepage_tab_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|bottom"
            android:text="分类"/>
        <RadioButton
            android:id="@+id/homepage_tab_live"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|bottom"
            android:text="直播"/>
        <RadioButton
            android:id="@+id/homepage_tab_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal|bottom"
            android:text="我的"/>
    </RadioGroup>

</LinearLayout>
